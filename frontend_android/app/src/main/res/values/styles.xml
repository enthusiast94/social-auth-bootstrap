<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="edittext">
        <item name="colorControlNormal">@color/edittext_underline</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="textview_label">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="button.danger" parent="button">
        <item name="android:background">@drawable/button_danger</item>
        <item name="android:textColor">@android:color/white</item>s
    </style>

    <style name="button.google" parent="button">
        <item name="android:background">@drawable/button_google</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button.facebook" parent="button">
        <item name="android:background">@drawable/button_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button.linkedin" parent="button">
        <item name="android:background">@drawable/button_linkedin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button.github" parent="button">
        <item name="android:background">@drawable/button_github</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
